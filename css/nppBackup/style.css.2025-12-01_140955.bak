* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Georgia', 'Garamond', serif;
    line-height: 1.8;
    color: #4a4a4a;
    background: linear-gradient(135deg, #f5f0f6 0%, #e8dff5 50%, #f0e6f6 100%);
    background-attachment: fixed;
}

header {
    background: linear-gradient(135deg, #8b7ab8 0%, #a894c9 50%, #c8b8d6 100%);
    color: white;
    padding: 4rem 2rem;
    text-align: center;
    box-shadow: 0 4px 20px rgba(139, 122, 184, 0.3);
    border-bottom: 3px solid rgba(255, 255, 255, 0.2);
}

header h1 {
    font-size: 2.8rem;
    margin-bottom: 0.5rem;
    font-weight: 300;
    letter-spacing: 2px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
}

header p {
    font-size: 1.2rem;
    opacity: 0.95;
    font-style: italic;
    font-weight: 300;
}

nav {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    padding: 1.2rem 2rem;
    box-shadow: 0 2px 10px rgba(139, 122, 184, 0.15);
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid rgba(139, 122, 184, 0.2);
}

nav ul {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 2.5rem;
    flex-wrap: wrap;
}

nav a {
    text-decoration: none;
    color: #8b7ab8;
    font-weight: 400;
    transition: all 0.3s ease;
    font-size: 1rem;
    letter-spacing: 0.5px;
}

nav a:hover {
    color: #6b5a98;
    text-shadow: 0 0 8px rgba(139, 122, 184, 0.3);
}

main {
    max-width: 900px;
    margin: 3rem auto;
    padding: 0 2rem;
}

article {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 2.5rem;
    margin-bottom: 2.5rem;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(139, 122, 184, 0.15);
    transition: all 0.4s ease;
    border: 1px solid rgba(139, 122, 184, 0.1);
}

article:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(139, 122, 184, 0.25);
}

article h2 {
    color: #8b7ab8;
    margin-bottom: 0.8rem;
    font-size: 1.9rem;
    font-weight: 400;
    letter-spacing: 1px;
}

article .meta {
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 1.2rem;
    font-style: italic;
}

article p {
    color: #5a5a5a;
    margin-bottom: 1.2rem;
    line-height: 1.9;
}

article a {
    color: #8b7ab8;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    display: inline-block;
}

article a:hover {
    color: #6b5a98;
    transform: translateX(5px);
}

/* Blog post specific styles */
.post-content {
    max-width: 800px;
    margin: 0 auto;
}

.post-content h3 {
    color: #8b7ab8;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 400;
    letter-spacing: 0.5px;
}

.post-content h4 {
    color: #a894c9;
    margin-top: 1.8rem;
    margin-bottom: 0.8rem;
    font-weight: 400;
}

.post-content ul, .post-content ol {
    margin-left: 2rem;
    margin-bottom: 1.5rem;
    line-height: 2;
}

.post-content code {
    background: rgba(139, 122, 184, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    color: #6b5a98;
}

.post-content pre {
    background: linear-gradient(135deg, #8b7ab8 0%, #a894c9 100%);
    color: #fff;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 15px rgba(139, 122, 184, 0.2);
}

.post-content pre code {
    background: transparent;
    padding: 0;
    color: white;
}

.post-content img {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
    margin: 1.5rem 0;
    box-shadow: 0 4px 15px rgba(139, 122, 184, 0.2);
}

.back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: #8b7ab8;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
}

.back-link:hover {
    color: #6b5a98;
    transform: translateX(-5px);
}

footer {
    background: linear-gradient(135deg, #6b5a98 0%, #8b7ab8 100%);
    color: white;
    text-align: center;
    padding: 2.5rem;
    margin-top: 4rem;
    box-shadow: 0 -4px 20px rgba(139, 122, 184, 0.2);
}

footer p {
    margin-bottom: 0.8rem;
    font-size: 1rem;
}

footer p:first-child {
    font-style: italic;
    font-size: 1.1rem;
    margin-bottom: 1.2rem;
}

footer a {
    color: #f5f0f6;
    text-decoration: none;
    transition: all 0.3s ease;
}

footer a:hover {
    color: white;
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.5);
}

@media (max-width: 768px) {
    header h1 {
        font-size: 2rem;
    }
    
    article {
        padding: 1.8rem;
    }
    
    article h2 {
        font-size: 1.5rem;
    }
    
    nav ul {
        gap: 1.5rem;
    }
}